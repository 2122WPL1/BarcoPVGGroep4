<Window x:Class="BarcoPVG.Views.Login.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcoPVG.Views.Login"
        xmlns:vm="clr-namespace:BarcoPVG.ViewModels"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" Background="LightGray">
    <Window.Resources>
        <vm:MultiValueConverter x:Key="converter"/>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <GroupBox Height="429" Header="Login">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="152*"/>
                        <ColumnDefinition Width="239*"/>
                        <ColumnDefinition Width="239*"/>
                        <ColumnDefinition Width="152*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Content="User name:" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center"/>
                    <Label Grid.Column="1" Content="Password:" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtUsername" Grid.Column="2" Grid.Row="1" Text="" VerticalAlignment="Center" Width="150" HorizontalAlignment="Center"/>
                    <TextBox x:Name="txtPassword" Grid.Column="2" Grid.Row="2" Text="" VerticalAlignment="Center" Width="150" HorizontalAlignment="Center"/>
                    <Button Grid.Column="2" Content="Login" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Margin="127,16,0,0" 
                            Command="{Binding LoginCommand}">
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource converter}">
                                <Binding ElementName="txtUsername" Path="Text"/>
                                <Binding ElementName="txtPassword" Path="Text"/>
                            </MultiBinding>
                        </Button.CommandParameter>

                    </Button>
                    <Button Grid.Column="2" Content="Exit" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Margin="45,16,0,0" />
                </Grid>
            </GroupBox>
        </StackPanel>

    </Grid>
</Window>
