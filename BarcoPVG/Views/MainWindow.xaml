<Window x:Class="BarcoPVG.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="720" Width="980" Background="LightGray" Foreground="White"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen" >
    <StackPanel >
        <!--<StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Stretch">
            <Image Style="{StaticResource BarcoLogo}" Source="/DictionaryResources/barco-logo.png"/>
            <Image Style="{StaticResource BarcoLogo}"/>
        </StackPanel>-->
        <StackPanel Margin="10">
            <GroupBox BorderThickness="0.1" >
                <GroupBox.Header>
                    <!-- This could be done more efficiently? -->
                    <Grid Background="#FFF10000">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="12*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Style="{StaticResource BarcoLogo}" Margin="25,0,25,0" Grid.RowSpan="2"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.RowSpan="2" >
                            <TextBlock FontSize="14" Text="Welcome "/>
                            <TextBlock FontSize="14" FontWeight="Bold" Text="{Binding User.Name}"/>
                            <TextBlock FontSize="14" Text=" ("/>
                            <TextBlock FontSize="14" Text="{Binding User.Division}"/>
                            <TextBlock FontSize="14" Text=")"/>
                        </StackPanel>
                    </Grid>
                </GroupBox.Header>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Button Content="Your requests" 
                            Command="{Binding DisplayEmployeeStartupCommand,
                            Mode=OneWay}" 
                            Visibility="{Binding NewRequests}"
                            Margin="10" Background="#FFF10000"/>
                        <Button Content="Edit/Approve requests" 
                            Command="{Binding DisplayPlannerStartupCommand, Mode=OneWay}" 
                            Visibility="{Binding ApproveRequests}"
                            Background="#FFF10000"/>
                        <Button Content="Plan tests" 
                            Command="{Binding DisplayTesterPlanCommand, Mode=OneWay}"
                            Visibility="{Binding Test}"
                            Margin="10" Background="#FFF10000"/>
                        <Button Content="View/Update tests" 
                            Command="{Binding DisplayTesterTestCommand, Mode=OneWay}"
                            Visibility="{Binding Test}"
                            Background="#FFF10000"/>
                        <Button Content="Development"
                        Command="{Binding DisplayDevStartupCommand, Mode=OneWay}" 
                            Visibility="{Binding SeeAll}"
                            Margin="10" Background="#FFF10000"/>
                        <Button Content="Database Management"
                                Command="{Binding DisplayDatabaseManagementCommand, Mode=OneWay}"
                                Visibility="{Binding Data}"
                                Background="#FFF10000"/>
                    </StackPanel>
                    <ScrollViewer Height="450">
                        <ContentControl Content="{Binding ViewModel}"/>
                    </ScrollViewer>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </StackPanel>
</Window>
