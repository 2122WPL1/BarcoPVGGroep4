<UserControl x:Class="BarcoDB_Admin.Views.DataBase.DBUserUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcoDB_Admin.Views.DataBase"
        mc:Ignorable="d"
        d:DesignHeight="800" d:Background="LightGray"  >
    <!--amy-->
    <StackPanel Margin="5">
        <GroupBox Height="420" Header="User">
            <ListView ItemsSource="{Binding AllUsers}" SelectedItem="{Binding selectedUser, Mode=TwoWay}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Abbreviation" Width="150" DisplayMemberBinding="{Binding AbbreviationUser}"/>
                        <GridViewColumn Header="First Name" Width="150" DisplayMemberBinding="{Binding FirstNameUser}"/>
                        <GridViewColumn Header="Last Name" Width="150" DisplayMemberBinding="{Binding LastNameUser}"/>
                        <GridViewColumn Header="Password" Width="150" DisplayMemberBinding="{Binding PasswordUser}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </StackPanel>
</UserControl>
